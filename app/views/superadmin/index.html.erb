<% content_for :navbar_special do %>
  <%= render partial: "shared/navbar-panel" %>
<% end %>

<div class="background-keep mt-5">
  <div class="row">
    <div class="col-3 ">
      <div class="card sticky-top sticky-offset">
        <div class="card-body">
          <h3 class="font-weight-bold">Welcome <%=current_user.name%>!</h3>
          <hr/>
          <h5 class="text-muted">Dashboard</h5>
          <hr/>
          <!-- Users -->
          <p class="text-muted">Users</p>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <a href="#" class="btn-link" id="view-users">View Users</a>
            </li>
            <li class="list-group-item">
              <a href="#" class="btn-link" id="update-users">Update Users</a>
            </li>
          </ul>
          <!-- Listings -->
          <p class="text-muted mt-3">Listings</p>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <a href="#" class="btn-link" id="pending-verification">Pending Verification</a>
            </li>
            <li class="list-group-item">
              <a href="#" class="btn-link" id="verified-listings" id="verified-listings">Verified Listings</a>
            </li>
            <li class="list-group-item">
              <a id="comments" class="text-muted">Comments</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-9">
      <div class="card">
        <div id="panel-box" class="card-body">
        </div>
      </div>
    </div>
  </div>
</div>
