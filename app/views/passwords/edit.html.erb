<% content_for :navbar do %>
  <% if signed_in? %>
    <%= render partial: "shared/navbar" %>
  <% else %>
    <%= render partial: "shared/navbar-index" %>
  <% end %>
<% end %>
<div class="container d-flex flex-wrap justify-content-center mt-5">
  <div class="card w-100">
    <div class="card-body">
      <div id="clearance" class="password-reset">
        <h2 class="card-title"><%= t(".title") %></h2>

        <p class="card-text"><%= t(".description") %></p>

        <%= form_for :password_reset,
        url: user_password_path(@user, token: @user.confirmation_token),
        html: { method: :put } do |form| %>
        <div class="form-group row">
          <%= form.label 'New Password', class:'col-4 col-form-label text-center m-0' %>
          <%= form.password_field :password, class:'col-6 col-form-control' %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <div class="submit-field">
        <%= form.submit class: 'btn btn-danger'%>
      </div>
    </div>
    <% end %>
  </div>
</div>
