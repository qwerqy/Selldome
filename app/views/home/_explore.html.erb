<div class="container-fluid p-0 mx-0 my-3">
  <h5 class="flexbox-card-title font-weight-bold">Explore Selldome</h5>
  <div class=" flexbox-card d-flex flex-wrap flex-row">
    <% Listing.all_place_type.each_with_index do |type, index| %>
        <div class="explorecard card shadow-sm">
          <%=link_to "/dome?utf8=âœ“&search=#{Listing.place_type_string(index+1)}" do %>
          <div id="explore-box" class="row">
            <% if index == 0 %>
            <div class="icon-box p-2 col-4 text-center ">
              <i class="fas fa-building text-danger" style="font-size:70px;"></i>
            </div>
            <% elsif index == 1 %>
            <div class="icon-box p-2 col-4 text-center ">
              <i class="fas fa-home text-danger" style="font-size:70px;"></i>
            </div>
            <% elsif index == 2 %>
            <div class="icon-box p-2 col-4 text-center ">
              <i class="fas fa-adjust text-danger" style="font-size:70px;"></i>
            </div>
            <% elsif index == 3 %>
            <div class="icon-box p-2 col-4 text-center ">
              <i class="fab fa-fort-awesome text-danger" style="font-size:70px;"></i>
            </div>
            <% elsif index == 4 %>
            <div class="icon-box py-2 pr-0 col-4 text-center ">
              <i class="far fa-building text-danger" style="font-size:70px;"></i>
            </div>
            <% end %>
            <div id="tagContainer" class="col-8 p-0 tag-container">
              <p class="m-0"><%=type%></p>
            </div>
          </div>

            <div id="tagContainer-sm" class="">
              <p class="m-0"><%=type%></p>
            </div>
          <%end%>
        </div>
    <% end %>
  </div>
</div>
