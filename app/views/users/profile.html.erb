<% content_for :navbar do %>
  <%= render partial: "shared/navbar" %>
<% end %>
<div class="background-keep">
  <div class="container-fluid p-0 mt-5">
    <img src="/assets/profile-photo.jpg" class="rounded-circle mx-auto d-block" style="height:300px;width:300px;"/>
  </div>
  <div class="container-fluid p-0">
    <h1 class="text-center mt-4"><%= @user.name %></h1>
  </div>
  <div class="col-3 mx-auto d-block p-0">
    <ul class="list-inline">
    <li class="list-inline-item"><p class="m-0 card-title text-center"><%= @user.country %></p></li>
    <li class="list-inline-item"><p class="m-0 card-title text-center"><%= @user.email %></p></li>
    <li class="list-inline-item"><p class="m-0 card-title text-center">0<%= @user.phone %></p></li>
    <li class="list-inline-item">
      <p class="m-0 card-title text-center">
        <% if @user.gender == 1 %>
          Male
        <% else %>
          Female
        <% end %>
      </p>
    </li>
    </ul>
  </div>
  <div class="container-fluid p-0 mt-5">
    <h5 class="font-weight-bold"><%=@user.name%>'s Listings</h5>
    <ul class="list-inline">
      <% @user.listings.each do |listing| %>
          <li class="list-inline-item">
            <div class="card first p-0 m-2 shadow-sm">
            <!-- Carousel -->
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
              <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
              </ol>
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img class="d-block w-100" src="/assets/restaurant.jpg" style="max-width: 300px;" alt="First slide">
                </div>
                <div class="carousel-item">
                  <img class="d-block w-100" src="/assets/restaurant.jpg" style="max-width: 300px;" alt="Second slide">
                </div>
                <div class="carousel-item">
                  <img class="d-block w-100" src="/assets/restaurant.jpg" style="max-width: 300px;" alt="Third slide">
                </div>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
            <!-- Details -->
            <div class="card-body">
              <p><%=listing.property_type%></p>
              <p><%=listing.city%></p>
              <p><%=listing.country%></p>
              <p><%=number_to_currency(listing.price, unit: '$')%></p>
              <p><%=listing.user.name%></p>
              <div class="progress" style="height: 5px;">
                <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
              </div>
            </div>
          </div>
          </li>
      <%end%>
    </ul>
  </div>
</div>
