<div class="text-field form-group">
  <%= form.label :first_name %>
  <%= form.text_field :first_name, type: 'first_name', class: 'form-control' %>
</div>

<div class="text-field form-group">
  <%= form.label :last_name %>
  <%= form.text_field :last_name, type: 'last_name', class: 'form-control' %>
</div>

<div class="text-field form-group">
  <%= form.label :birthday %>
  <%= form.date_select :birthday,
  {
    order: [:month, :day, :year],
    prompt: {
      day: 'Select day',
      month: 'Select month',
      year: 'Select year'
    },
    start_year: Date.today.year - 18, end_year: Date.today.year - 100
  },
  {required: true} %>
</div>

<div class="text-field form-group">
  <%= form.label :email %>
  <%= form.text_field :email, type: 'email', class: 'form-control' %>
</div>

<div class="text-field form-group">
  <%= form.label :phone %>
  <%= form.text_field :phone, type: 'phone', class: 'form-control' %>
</div>

<div class="password-field form-group">
  <%= form.label :password %>
  <%= form.password_field :password, class: 'form-control' %>
</div>
