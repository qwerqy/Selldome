<head>
  <script src="https://cdn.jsdelivr.net/npm/gijgo@1.9.10/js/gijgo.min.js" type="text/javascript"></script>
  <link href="https://cdn.jsdelivr.net/npm/gijgo@1.9.10/css/gijgo.min.css" rel="stylesheet" type="text/css" />
</head>

<%= form_for @user do |form| %>
<div class="text-field form-group">
  <%= form.label :first_name %>
  <%= form.text_field :first_name, type: 'first_name', placeholder: '', class: 'form-control' %>
</div>

<div class="text-field form-group">
  <%= form.label :last_name %>
  <%= form.text_field :last_name, type: 'last_name', class: 'form-control' %>
</div>

<div class="text-field form-group">
  <%= form.label :birthday %>
  <%= form.text_field :birthday, type: 'birthday', class: 'form-control', id: 'datepicker'%>
</div>

<div class="text-field form-group">
  <%= form.label :email %>
  <%= form.text_field :email, type: 'email', class: 'form-control' %>
</div>

<div class="text-field form-group">
  <%= form.label :phone %>
  <%= form.text_field :phone, type: 'phone', class: 'form-control' %>
</div>

<div class="password-field form-group">
  <%= form.label :password %>
  <%= form.password_field :password, class: 'form-control' %>
</div>

<div class="submit-field form-group">
  <%= form.submit "Save Changes", class: 'btn' %>
</div>
<% end %>

<script>
    $('#datepicker').datepicker({
        uiLibrary: 'bootstrap4'
    });
</script>
