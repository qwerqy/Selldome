<head>
   <%= stylesheet_link_tag "users" if controller_name == "users" %>
</head>

<div class="container" id="signUpBox">
  <div id="clearance" class="sign-up">
    <h2><%= t(".title") %></h2>

    <%= form_for @user do |form| %>
      <%= render partial: '/users/form', object: form %>

      <div class="submit-field">
        <%= form.submit "Sign Up", class: 'btn' %>
      </div>

      <div class="other-links list-inline mt-3">
        <%= link_to t(".sign_in"), sign_in_path, class: 'btn btn-primary list-inline-item' %>
        <%= link_to "Sign in with Google", "/auth/google_oauth2", class: 'btn btn-danger list-inline-item' %>
      </div>
    <% end %>
  </div>
</div>
